---
// src/components/Skills.astro

// Example skills - Move this to a separate data file (e.g., src/config/skills.ts)
const skillCategories = [
    {
        title: "Programming & Data",
        skills: ["Python", "SQL", "Pandas", "NumPy", "Scikit-learn"]
    },
    {
        title: "Machine Learning",
        skills: ["Deep Learning", "NLP", "Computer Vision", "Reinforcement Learning", "MLOps"]
    },
    {
        title: "Frameworks & Tools",
        skills: ["TensorFlow", "PyTorch", "Keras", "Docker", "Git", "AWS SageMaker / GCP AI Platform"]
    },
    {
        title: "Concepts",
        skills: ["Model Evaluation", "Feature Engineering", "Algorithm Design", "Data Visualization"]
    }
]
---
<section id="skills" class="py-20 md:py-28">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-slate-100 mb-16 font-title">
            My Tech Stack & Skills
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
            {skillCategories.map(category => (
                <div class="bg-slate-800 p-6 rounded-lg shadow-lg hover:shadow-primary/20 transition-shadow duration-300">
                    <h3 class="text-xl font-semibold text-primary mb-4">{category.title}</h3>
                    <ul class="space-y-2">
                        {category.skills.map(skill => (
                            <li class="text-slate-300 flex items-center">
                                <svg class="w-4 h-4 mr-2 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                                {skill}
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </div>
</section>
