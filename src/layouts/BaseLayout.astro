---
// src/layouts/BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css'; // Import Tailwind base styles

// Example site metadata (better to put in a separate config file)
const siteTitle = "Leo Schmidt-Traub";
const description = "Personal website";
const { title = siteTitle, desc = description } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={desc} />

    {/* Example: Add Google Fonts */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet">
    <style>
        /* Basic styling enhancement */
        html {
            font-family: 'Inter', sans-serif;
        }
        /* Add smooth scrolling */
        @media (prefers-reduced-motion: no-preference) {
          html {
            scroll-behavior: smooth;
          }
        }
    </style>
</head>
<body class="bg-slate-900 text-slate-200 leading-relaxed antialiased selection:bg-teal-300 selection:text-teal-900">
    <div class="flex flex-col min-h-screen">
        <Header />
        <main class="flex-grow">
            <slot /> {/* Page content goes here */}
        </main>
        <Footer />
    </div>
</body>
</html>
